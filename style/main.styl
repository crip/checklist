/*------------------------------------*
   $MAIN
*------------------------------------*/

body
  font-family $base-font-family
  color $base-color
  background-color #F6F8FB

::selection
  background-color $base-color
  color #fff

/**
 * Site
 */
.site
  position relative

.main
  display block
  width 100%
  max-width 800px
  margin 0 auto
  padding 20px 40px
  margin-bottom 50px

  *, *:before, *:after
    vendor('box-sizing', border-box)

a
  color $brand-color
  text-decoration none
  vendor('transition', color .2s ease)

  &:hover, &:focus
    color $brand-color--darken
    border-bottom 1px solid $brand-color--darken

a[target="_blank"]:after
  content url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAVklEQVR4Xn3PgQkAMQhDUXfqTu7kTtkpd5RA8AInfArtQ2iRXFWT2QedAfttj2FsPIOE1eCOlEuoWWjgzYaB/IkeGOrxXhqB+uA9Bfcm0lAZuh+YIeAD+cAqSz4kCMUAAAAASUVORK5CYII=")
  margin 0 0 0 5px

/**
 * Header
 */
.header
  background-color $brand-color
  color #fff
  height 250px
  position relative
  margin-bottom 60px

.site-title
  margin 0
  padding 0
  display inline-block
  font-size 3.5em
  font-weight 200
  position absolute
  top 50%
  left 50%
  vendor('transform', translate(-50%, -50%))
  padding-left 20px

  &:before
    content ''
    background transparent url('images/crip.svg') center center no-repeat
    display block
    width 70px
    height 70px
    -webkit-background-size 100%
    background-size 100%
    position absolute
    bottom 10px
    right 100%

/**
 * Navigation
 */
.top-nav
  position absolute
  top 100%
  left 0
  display block
  background-color #E5EBF3
  border-bottom 1px solid #ccc
  width 100%
  margin-bottom 20px
  z-index 10
  clearfix()

  &.fixed-pos
    position fixed !important
    top 0
    left 0

.top-nav__inner
  display block
  max-width 800px
  margin 0 auto
  clearfix()

.one-half
  width 50%
  float left
  clearfix()

.nav-actions
  margin 0
  padding 0
  list-style none

  li
    display inline-block

.main-actions
  text-align left

  li
    display block
    float left

  a
    display block
    float left
    text-indent -9999px
    width 4em
    height 3.5em
    border-bottom 2px solid transparent
    padding-top 2px
    position relative

    &:before
      content ''
      position absolute
      border-width 8px
      border-color transparent
      border-style solid
      border-bottom-color $base-color
      display block
      width 0
      height 0
      top 100%
      left 50%
      vendor('transform', translateX(-50%))
      opacity 0
      visibility hidden

    &:after
      content attr(title)
      position absolute
      top 74px
      left 50%
      vendor('transform', translateX(-50%))
      background-color $base-color
      color #fff
      display block
      text-indent 1px
      font-size 14px
      font-weight 400
      min-width 140px
      text-align center
      line-height 2.5
      border-radius 2px
      opacity 0
      visibility hidden

    &:hover, &:focus
      border-bottom 2px solid $brand-color
      outline none

      &:before, &:after
        opacity 1
        visibility visible

.main-actions__scroll
  background transparent url('images/arrow-up.svg') center center no-repeat
  background-size 2em

.main-actions__print
  background transparent url('images/printer.svg') center center no-repeat
  background-size 2em

.main-actions__clear
  background transparent url('images/reload.svg') center center no-repeat
  background-size 2em

.sort-actions
  text-align right

  li.active
    a
      background-color $brand-color
      color #fff
      vendor('box-shadow', 0 1px 0 $brand-color)

  a
    display inline-block
    line-height 3.5
    padding 0px 1.5em
    border-bottom 2px solid transparent
    padding-top 2px
    font-weight 500

    &:hover, &:focus
      border-bottom 2px solid $brand-color
      background-color $brand-color
      color #fff
      outline none
      vendor('box-shadow', 0 1px 0 $brand-color)

/**
 * Section
 */
.section
  padding 10px 0
  margin-bottom 30px

  &:last-child
    margin-bottom 0

.section-header
  padding-bottom 20px

.section-title
  text-align center
  font-weight 500
  font-size 2em
  margin 0
  padding 0

.section-description
  display block
  text-align center
  font-size 1em
  color lighten($base-color, 30%)


/**
 * Checklist
 */
.checklist
  list-style none
  padding 0
  margin 0
  display block
  clearfix()

.check-item
  display block

  &:nth-child(even)
    .checkbox
      background-color darken(#F6F8FB, 5%)

  &:first-of-type
    .checkbox
      border-radius 4px 4px 0 0

  &:last-of-type
    .checkbox
      border-bottom 1px solid #ccc
      border-radius 0 0 4px 4px

.item-title
  margin 0
  padding 0
  font-weight 500
  font-size 1.5em
  margin-bottom .5em
  line-height 1.2

.item-description
  display none

  p
    margin 0
    margin-bottom 5px
    color #505050

  .done &
    a
      color $base-color !important

      &:hover, &:focus
        border-bottom 1px solid $base-color

.item-description__toggle
  position absolute
  bottom 0
  left 0
  width 100%
  text-align center
  display block
  line-height 2
  background transparent url('images/ellipsis.svg') center center no-repeat
  -webkit-background-size 26px
  background-size 26px
  text-indent -9999px
  vendor('transition', background-color .2s ease)

  &:hover, &:focus
    border-top 1px solid #ccc
    border-bottom none
    background-color #e0e0e0
    outline none

  .done &
    background-image url('images/ellipsis_white.svg') !important

    &:hover, &:focus
      border-top 1px solid darken($checked-color, 50%)
      border-bottom none
      background-color darken($checked-color, 25%)
      outline none

.checkbox
  padding 40px 60px 40px 80px
  display block
  border-top 1px solid #ccc
  border-left 1px solid #ccc
  border-right 1px solid #ccc
  vendor('transition', background-color .2s ease)

  &:hover
    background-color lighten(#D6DBE2, 50%) !important

  &.done
    background-color $checked-color !important
    color #fff

    p
      color #fff

.control
  position relative
  cursor pointer

  input
    position absolute
    opacity 0
    z-index -1

.control-indicator
  position absolute
  top 50%
  left 2.1em
  display block
  width  2.2rem
  height 2.2rem
  line-height 2rem
  font-size 65%
  color #eee
  text-align center
  background-color lighten(#B3BECD, 10%)
  background-size 70% 70%
  background-position center center
  background-repeat no-repeat
  vendor('user-select', none)
  vendor('transform', translateY(-50%))

/* Hover state */
/* Focus */
.control input:focus ~ .control-indicator
  box-shadow 0 0 0 .075rem #fff, 0 0 0 .2rem #B3BECD

/* Checked state */
.control input:checked ~ .control-indicator
  color #fff
  background-color darken($checked-color, 25%)

/* Checkbox modifiers */
.checkbox .control-indicator
  border-radius 3px

.checkbox input:checked ~ .control-indicator
  background-image url('images/check.svg')

.item-code
  font-size 15px

.hljs
  display block
  padding 0.8em 1em
  border-radius 4px
  width 100%

/**
 * Footer
 */
.footer
  display block
  background-color $base-color
  padding 20px 0
  text-align center

.credit
  margin 0
  padding 0
  margin-bottom 10px
  color #727A84
  font-weight 300
  font-size 1.2em

.heart
  position relative
  top 5px
  margin 0px 5px

.credit-link
  color #fff
  text-decoration none

@media print

  .header
    background-color none
    height auto

  .site-title
    color black
    padding-left 0
    font-size 2em
    font-weight 500

  .top-nav
    display none

  .item-description
    display block !important

    p
      display block

  .control-indicator
    display none !important

  .checkbox
    padding 0px
    border none
    height 130px

    &:last-of-type
      border-bottom none !important

  .footer
    display none
